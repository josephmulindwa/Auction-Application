<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/frame_encasing"
    tools:ignore="RtlSymmetry">
    <androidx.cardview.widget.CardView
        android:id="@+id/message_card"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="4dp">
        <LinearLayout
            android:id="@+id/background_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/message_body_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="@font/aller_light"
                tools:text="i guess this is the most sensible option i guess this is the most sensible option"/>
            <TextView
                android:id="@+id/message_time_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_gravity="end"
                tools:text="24 Sept, 2022 17:54" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>