<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:minHeight="300dp"
    android:layout_height="400dp">
    <ImageView
        android:id="@+id/adapter_category_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_baseline_image_400"/>
    <TextView
        android:id="@+id/adapter_category_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="APARTMENTS"
        android:textColor="@color/white"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="26dp"
        android:textSize="28sp"
        android:fontFamily="@font/aller_bold"
        style="@style/DarkTextShadow"/>
</FrameLayout>