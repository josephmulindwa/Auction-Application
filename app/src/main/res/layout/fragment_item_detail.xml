<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:id="@+id/flipper_container"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">
            <androidx.viewpager.widget.ViewPager
                android:id="@+id/image_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="bottom"
                android:background="#33000000"/>
            <TextView
                android:id="@+id/price_text_view"
                style="@style/DarkTextShadow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="8dp"
                android:padding="5dp"
                android:fontFamily="@font/aller_light"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="16sp"
                tools:text="UGX 12,000" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aller_regular"
                android:textColor="@color/purple_300"
                android:textSize="20sp"
                tools:text="Scholastic Set"
                app:layout_constraintTop_toBottomOf="@id/auction_count_layout"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/upload_date_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/upload_date_holder"
                android:textSize="12sp"
                android:layout_marginBottom="4dp"/>

            <LinearLayout
                android:id="@+id/auction_count_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <TextView
                    android:id="@+id/auction_end_label_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="@string/auction_ends_in"/>
                <TextView
                    android:id="@+id/auction_count_view"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:textSize="12sp"
                    android:text="@string/timestamp_holder" />
                <TextView
                    android:id="@+id/auction_time_format_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="@string/hours_short"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:id="@+id/current_bid_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current Bid : UGX "
                    android:layout_margin="4dp"/>
                <TextView
                    android:id="@+id/current_bid_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/double_dash_holder"
                    android:textColor="@color/black"/>
                <ProgressBar
                    android:id="@+id/current_bid_load_progress_bar"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:visibility="gone"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:id="@+id/buy_now_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                app:layout_constraintTop_toBottomOf="@id/title_text_view">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/buy_now_tag"
                    android:layout_margin="4dp"/>
                <TextView
                    android:id="@+id/buy_now_price_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/double_dash_holder"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <TextView
                android:id="@+id/descrption_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/aller_regular"
                android:text="@string/description_capital"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/buy_now_layout"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <TextView
                android:id="@+id/description_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/aller_light"
                android:text="@string/description_improv"
                android:textColor="@color/gray_400"/>
            <TextView
                android:id="@+id/posted_by_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/posted_by"
                android:fontFamily="@font/aller_regular"
                android:textColor="@color/gray_400"/>
            <TextView
                android:id="@+id/poster_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/double_dash_holder"
                android:fontFamily="@font/aller_light"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/posted_by_label"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <TextView
                android:id="@+id/poster_rating_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Rating : 4.5 of 4 reviews"
                android:fontFamily="@font/aller_light"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/poster_label"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/recent_bids_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recent_bids"
                android:textColor="@color/blue_persian_960"
                android:layout_margin="6dp"/>

            <androidx.appcompat.widget.AppCompatRatingBar
                android:id="@+id/rating_bar"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:stepSize="0.1"
                android:numStars="5"
                android:rating="0"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:transformPivotX="0dp"
                android:isIndicator="true"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/poster_rating_text_view"/>
            <Button
                android:id="@+id/place_bid_button"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="@string/place_bid"
                android:textSize="20sp"
                android:layout_margin="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rating_bar"/>
            <LinearLayout
                android:id="@+id/or_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_margin="6dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/place_bid_button">
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/gray_400"
                    android:layout_margin="5dp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="@string/or"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/gray_400"
                    android:layout_margin="5dp"
                    android:layout_weight="1"/>
            </LinearLayout>
            <TextView
                android:id="@+id/buy_now_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/buy_now"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/deep_sky_blue"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="2"
                android:shadowColor="@color/black"
                android:layout_margin="10dp"
                app:layout_constraintTop_toBottomOf="@id/or_layout"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>