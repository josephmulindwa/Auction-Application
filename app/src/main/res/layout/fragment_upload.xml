<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <FrameLayout
        android:id="@+id/frame_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        tools:ignore="UselessParent">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp">
            <TextView
                android:id="@+id/my_uploads_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/my_uploads"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:padding="4dp"
                android:background="@color/celadon"
                app:drawableTint="@color/black"
                app:drawableRightCompat="@drawable/ic_baseline_arrow_forward_ios_24" />
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_margin="4dp"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp">
                <EditText
                    android:id="@+id/name_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Name of item"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_margin="6dp"
                    android:singleLine="true"
                    android:maxLength="40"
                    android:inputType="text"
                    android:background="@android:color/transparent"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    tools:ignore="UseCompoundDrawables">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start Price"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_margin="4dp"/>
                    <ImageView
                        android:id="@+id/start_price_help_view"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_baseline_help_24"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UGX"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_margin="4dp"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="2dp">
                    <EditText
                        android:id="@+id/start_price_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="eg 5000"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:layout_margin="6dp"
                        android:singleLine="true"
                        android:maxLength="8"
                        android:inputType="numberDecimal"
                        android:background="@android:color/transparent"/>
                </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="2dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    tools:ignore="UseCompoundDrawables">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/reserve_price"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_margin="4dp"/>
                    <ImageView
                        android:id="@+id/reserve_price_help_view"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_baseline_help_24"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="UGX"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:layout_margin="4dp"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="2dp">
                        <EditText
                            android:id="@+id/reserve_price_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="(Optional)"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:layout_margin="6dp"
                            android:singleLine="true"
                            android:maxLength="8"
                            android:inputType="numberDecimal"
                            android:background="@android:color/transparent"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End Date"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_margin="4dp"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp">
                <TextView
                    android:id="@+id/end_date_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="End date"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_margin="6dp"
                    android:singleLine="true"
                    android:maxLength="16"
                    android:background="@android:color/transparent"
                    app:drawableRightCompat="@drawable/ic_baseline_ios_arrow_down_24" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <TextView
            android:id="@+id/date_picker_error_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/red_american_rose_920"
            android:textSize="12sp"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End Time"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_margin="4dp"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp">
                <TextView
                    android:id="@+id/end_time_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="End time"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_margin="6dp"
                    android:singleLine="true"
                    android:maxLength="40"
                    android:inputType="text"
                    android:background="@android:color/transparent"
                    app:drawableRightCompat="@drawable/ic_baseline_ios_arrow_down_24"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_margin="4dp"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp">
            <EditText
                android:id="@+id/description_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:gravity="top"
                android:fontFamily="@font/aller_light"
                android:hint="Briefly describe this item"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_margin="6dp"
                android:maxLines="4"
                android:maxLength="250"
                android:inputType="textMultiLine"
                android:background="@android:color/transparent"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_margin="4dp"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/category_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="2dp">
                <TextView
                    android:id="@+id/category_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/select_a_category"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_margin="6dp"
                    android:singleLine="true"
                    android:maxLength="20"
                    android:background="@android:color/transparent"
                    android:drawableRight="@drawable/ic_baseline_ios_arrow_down_24"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <TextView
            android:id="@+id/category_error_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/red_american_rose_920"
            android:textSize="12sp"
            android:visibility="gone"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Photo"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/add_photo_error_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/red_american_rose_920"
            android:textSize="12sp"
            android:visibility="gone"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/photo_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>
        <Button
            android:id="@+id/continue_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/continue_word"
            android:layout_margin="5dp"
            android:textSize="20sp"
            android:padding="8dp"
            android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
            android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24" />
    </LinearLayout>
    </FrameLayout>
</ScrollView>