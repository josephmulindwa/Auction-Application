<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/browse_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/browse_categories"
        android:textColor="@color/black"
        android:fontFamily="@font/aller_regular"
        android:textStyle="bold"
        android:layout_margin="8dp"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/browse_text_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.viewpager.widget.ViewPager
                android:id="@+id/category_view_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <view.DotIndicatorView
                android:id="@+id/dot_indicator_view"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_gravity="bottom"/>
        </FrameLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>