<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Stauc" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/dodger_blue</item>
        <item name="colorPrimaryDark">@color/dodger_blue</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Accent -->
        <item name="colorAccent">@color/gray_battleship</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <!-- Bottom Navigation. -->
        <item name="bottomNavigationStyle">
            @style/Widget.App.BottomNavigationView
        </item>
        <item name="android:fontFamily">@font/aller_regular</item>
    </style>

    <style name="ActionBarStyle" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:background">@color/white</item>
        <!-- :textColorPrimaryInverse for .Light. -->
        <item name="titleTextColor">@color/black</item>
        <item name="popupTheme">@style/Theme.AppCompat.Light</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/deep_sky_blue</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="InputView">
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">8dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/aller_light</item>
        <item name="android:background">@drawable/rounded_corner_card_5</item>
    </style>

    <style name="DarkTextShadow">
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="CategoryBlock">
        <item name="android:padding">10dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/aller_regular</item>
    </style>

    <style name="AuthTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:fontFamily">@font/aller_bold</item>
    </style>

</resources>